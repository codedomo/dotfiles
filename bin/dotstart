#!/bin/bash
step(){
  echo " > $@"
  "$@" 2>&1 >/dev/null
}

if [ -n "$(git status --porcelain)" ]; then
  echo "GIT changes detected!"
  echo "Please make your dotfiles working dir clean and try again!"
  exit 1
fi

step cd ~/dotfiles/    &&
step ./install.sh      &&
step source bashrc     &&
step mux steptfilez
