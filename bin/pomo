#!/usr/bin/ruby

STDOUT.sync = true

now = Time.new
twentyfive = now + 25*60
puts "pomodoro ends #{twentyfive}"

seconds = 1
while now < twentyfive do
  print (seconds % 5 == 0) ? "o" : "."
  sleep 1
  print " #{(seconds / 60).to_s.rjust(2)}/25\n" if seconds % 60 == 0

  now = Time.new

  seconds += 1
end

puts "\ntime is up"
